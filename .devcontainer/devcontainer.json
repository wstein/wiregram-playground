{
  "name": "WireGram - Fedora Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "castwide.solargraph",
        "crystal-lang.crystal",
        "GitHub.vscode-pull-request-github",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-containers",
        "redhat.vscode-yaml",
        "tadashi.fish"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "editor.formatOnSave": false,
        "files.associations": {
          "*.wg": "ini",
          "*.minilang": "plaintext"
        },
        "yaml.format.enable": true
      }
    }
  },
  "forwardPorts": [
    8080
  ],
  "postCreateCommand": ".devcontainer/scripts/devcontainer-setup.sh",
  "remoteUser": "vscode",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=vscode-home,target=/home/vscode,type=volume"
  ]
}